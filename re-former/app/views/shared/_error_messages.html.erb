<% if @user.errors.any? %>
  <div class ='error'>
    <div>
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% else %>
  <div class='success'> Success! You have have updated Your account! </div>
<% end %>