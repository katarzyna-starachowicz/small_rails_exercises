<!DOCTYPE html>
<html>
<head>
  <title>PrivateEvents</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <%= current_user.name %> | <%= link_to 'Log out', logout_path, method: :delete %>
<% else %>
  <%= link_to 'Log in', login_path %> | <%= link_to 'Sign up', new_user_path %>
<% end %>

<%= yield %>

<br><%= link_to 'See all events', events_path %>
<% if current_user %>
   | <%= link_to 'Create a new event', new_event_path %>
<% end %>

</body>
</html>
